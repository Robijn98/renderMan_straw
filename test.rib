Display "straw.exr" "file" "rgb"
Format 512 512 1

Projection "perspective" "fov" [30]
Translate 0 0 5

WorldBegin

        Light "PxrDomeLight" "domeLight" "string lightColorMap" ["./textures/warm_restaurant_4k.tx"]
            "float exposure" [-1.5]


Bxdf "LamaTranslucent" "straw"
    "color color" [1 1 1]
    "float roughness" [0.0]
    "normal normal" [0 0 0]
    "color shadowColor" [0.0 0.0 0.0]
    "float energyCompensation" [1.0]
    "int bumpShadowing" [1]
    "string lobeName" ["translucent"]


TransformBegin
    Translate 0 0 0
    Sphere 1 -1 1 360
TransformEnd

WorldEnd
